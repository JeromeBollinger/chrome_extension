{
    "name": "Keyboard Navigation",
    "version": "1.0.0",
    "description": "Browsing only with keyboard",
    "manifest_version": 3,
    "author": "Jerome Bollinger",
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "<all_urls>"
    ],
    "permissions": [
        "scripting"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "css": [
                "style.css"
            ]
        }
    ]
}